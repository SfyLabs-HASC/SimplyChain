# ==============================
# Client-side (Vite, exposed)
# Prefix MUST be VITE_
# ==============================

# Firebase Web SDK (public)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_MEASUREMENT_ID=
VITE_FIREBASE_DATABASE_URL=

# Thirdweb (public client id)
VITE_THIRDWED_CLIENT_ID=
# Note: Correct name is VITE_THIRDWEB_CLIENT_ID; keeping both lines helps avoid typos
VITE_THIRDWEB_CLIENT_ID=

# Stripe (publishable key)
VITE_STRIPE_PUBLISHABLE_KEY=


# ==============================
# Server-side (NOT exposed)
# Do NOT prefix with VITE_
# ==============================

# Public site canonical URL (used to generate absolute links)
PUBLIC_SITE_URL=

# Firebase Admin SDK (choose ONE of the two methods)
# 1) Individual fields
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=
FIREBASE_DATABASE_URL=
# If your private key contains literal \n, keep them; code converts to real newlines

# 2) Or JSON string for the Admin SDK service account
# FIREBASE_ADMIN_SDK_JSON='{"project_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"..."}'

# Email provider (Resend)
RESEND_API_KEY=

# Stripe Secret (server)
STRIPE_SECRET_KEY=

# Blockchain config
CONTRACT_ADDRESS=
BACKEND_PRIVATE_KEY=
POLYGON_RPC_URL=https://polygon-rpc.com

# Thirdweb server features (optional)
THIRDWEB_SECRET_KEY=
THIRDWEB_INSIGHT_API_URL=
THIRDWEB_INSIGHT_API_KEY=

# GitHub (optional, used by export flow)
GITHUB_TOKEN=
GITHUB_REPO=owner/repo

# Filebase / S3 compatible storage (optional, used by upload API)
FILEBASE_ACCESS_KEY=
FILEBASE_SECRET_KEY=
FILEBASE_BUCKET_NAME=

# Notes:
# - Variables starting with VITE_ are embedded in the client bundle (public).
# - Server variables must be configured in the Vercel project settings (Environment Variables).
# - Set PUBLIC_SITE_URL to your production domain, e.g. https://example.com
# Blockchain Configuration
BACKEND_PRIVATE_KEY=your_private_key_here
CONTRACT_ADDRESS=0x...your_contract_address_here
POLYGON_RPC_URL=https://polygon-rpc.com

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here